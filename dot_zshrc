# Environment
export EDITOR="nvim"
# ANT color logger
export ANT_ARGS='-logger org.apache.tools.ant.listener.AnsiColorLogger'
export GRADLE_HOME="/opt/gradle/gradle-6.3/"
export WORKSPACE="${HOME}/workspace"
export USE_GKE_GCLOUD_AUTH_PLUGIN=True
#
# Download URL of antigen
ANTIGEN_URL="git.io/antigen-nightly"
# Install Antigen if needed
ANTIGEN="${HOME}/.antigen/antigen.zsh"

if [ ! -f ${ANTIGEN} ]; then
    echo "Installing Antigen ..."
    curl --create-dirs -#SLo ${ANTIGEN} ${ANTIGEN_URL}
fi

# Load Antigen
source ${ANTIGEN}
# Use oh-my-zsh
antigen use oh-my-zsh
# Load plugins
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-completions
antigen bundle docker-compose
antigen bundle terraform
antigen bundle kubectl

# Set theme
antigen theme "clean"

# Apply settings
antigen apply

# History
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000

# Aliases
alias g="git"
alias t="tmux a"
alias v="nvim"
alias f="find . -type f -print | xargs grep"
alias open="xdg-open"
alias awsume=". awsume"
alias rgf='rg --files | rg'

# Set GPG password prompt to current TTY
if command -v gpg-connect-agent >/dev/null; then
    gpg-connect-agent updatestartuptty /bye >/dev/null 2>&1
fi

# Export SSH socket to GPG agent
if command -v gpgconf >/dev/null; then
    export SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"
fi


# BINARIES RUST AND GO and node
export PATH="$PATH:$HOME/.cargo/bin:$HOME/go/bin:$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$HOME/.local/bin:$HOME/.bin/"

alias luamake=${PATH}/workspace/external_repos/lua-language-server/3rd/luamake/luamake

plugins=(
    git
    kubectl
    Kube-ps1
    helm
    terraform
docker-compose)
